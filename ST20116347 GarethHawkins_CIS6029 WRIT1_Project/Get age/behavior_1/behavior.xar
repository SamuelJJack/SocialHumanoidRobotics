            elif age >=50 and age < 60:
                self.tts.say("I predicted you to be" + ageString + "years old. You're looking older than normal, take a nap")
            #personalised response for age group 51 - 60
            elif age >= 60:
                self.tts.say("I predicted you to be" + ageString + "years old. Maybe you should reconsider this expedition")
            #personalised response for age group 60 plus
            pass

        except ValueError:        ## Catching ValueError exception

            self.tts.say("There was a problem retrieving the age variable. Please try again")
            pass

    def onInput_onStop(self):
        self.onUnload() #it is recommended to reuse the clean-up as the box is stopped
        self.onStopped() #activate the output of the box]]>
